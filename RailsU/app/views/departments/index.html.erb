<h1>Listing departments</h1>

<table class = "table">
  <thead>
    <tr class = "row">
      <th>Name</th>
      <th>Budget</th>
      <th>Start date</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr class = "row">
        <td><%= department.name %></td>
        <td><%= department.budget %></td>
        <td><%= department.start_date %></td>
        <td><%= department.instructor.first_name + " " + department.instructor.last_name %></td>
        <td><%= link_to 'Show', department,:class => "btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_department_path(department),:class => "btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', department,:class => "btn-warning btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

